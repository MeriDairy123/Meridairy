<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/layoutPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tvPlanHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color_Yellow"

            android:gravity="center"

            android:minHeight="35dp"

            android:text="@string/Months"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/viewPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                android:id="@+id/tv_Rslable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="30dp"

                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/tvPlanPrice"
                android:gravity="center"
                android:text="@string/Rs"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                android:id="@+id/tvPlanPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_Rslable"
                android:layout_centerInParent="true"

                android:layout_marginLeft="-5dp"
                android:layout_marginTop="-20dp"

                android:gravity="center"
                android:text="200/-"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold" />

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                android:id="@+id/tvValidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPlanPrice"
                android:layout_centerInParent="true"
                android:layout_marginLeft="-5dp"

                android:layout_marginTop="5dp"

                android:gravity="center"
                android:text="Validity: Unlimited"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />
        </RelativeLayout>

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/btnPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPlan"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_shape_global"
            android:gravity="center"
            android:minWidth="100dp"


            android:minHeight="30dp"
            android:padding="3dp"
            android:text="@string/Purchase"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>