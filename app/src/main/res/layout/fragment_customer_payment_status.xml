<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"

    android:background="@drawable/layout_border"
    android:orientation="vertical">

    <b2infosoft.milkapp.com.useful.CustomFontTextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/_29sdp" />

    <ImageView
        android:id="@+id/imgStatus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        app:srcCompat="@drawable/ic_failure" />

    <b2infosoft.milkapp.com.useful.CustomFontTextView
        
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="55dp"
       android:textStyle="bold"
        android:gravity="center"
        android:text="@string/PaymentFailed"
        android:textColor="@color/colorRed"
        android:textSize="21sp" />


    <LinearLayout
        android:id="@+id/layoutValidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
          
            android:gravity="start"
            android:text="@string/Item"
            android:textColor="@color/color_bg_light"
            android:textSize="14sp" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:id="@+id/tvValidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
          
            android:gravity="right"
            android:text="Ghee"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/color_list_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
          
            android:gravity="start"
            android:text="@string/OrderId"
            android:textColor="@color/color_bg_light"
            android:textSize="14sp" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:id="@+id/tvOrderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
          
            android:gravity="right"
            android:text="Order0123564"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/color_list_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".4"
            android:gravity="start"
            android:text="@string/Amount"
            android:textStyle="bold"
            android:textColor="@color/color_bg_light"
            android:textSize="14sp" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
        
            android:id="@+id/tvAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"

            android:gravity="right"
            android:textStyle="bold"
            android:text="199"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/btn_shape_global"

        android:foreground="@drawable/ripple"
        android:gravity="center"
        android:minHeight="@dimen/_40sdp"
        android:text="@string/Done"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_14sdp" />
</LinearLayout>
