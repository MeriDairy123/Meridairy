<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg_light"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/navImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="35dp"
            android:minHeight="35dp"
            android:padding="3dp"

            app:srcCompat="@drawable/ic_user_profile_dairy" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/navImage"

            android:inputType="text"

            android:text="@string/Meri_Dairy"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/navImage"

            android:inputType="text"
            android:text="1234567890"
            android:textColor="@color/colorWhite"
            android:textSize="10sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:layout_below="@id/navImage"
            android:layout_marginTop="5dp"
            android:background="@color/colorWhite" />

        <ImageView
            android:id="@+id/imgTick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"

            android:padding="5dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_checked" />

    </RelativeLayout>


</LinearLayout>
