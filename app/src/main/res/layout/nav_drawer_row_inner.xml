<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:minHeight="45dp"
    android:layout_marginBottom="0.9dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/navImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:tint="@color/colorDashboardIcon"
            app:srcCompat="@drawable/ic_menu_dashboard" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/navImage"
            android:inputType="text"
            android:padding="10dp"

           android:gravity="center_vertical"
            android:text="Nav Item Text"
            android:textColor="@color/colorDashboardIcon"
            android:textSize="12sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height=".001dp"

        android:layout_below="@id/title"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/navImage"
        android:background="@color/colorLightGray" />
</LinearLayout>