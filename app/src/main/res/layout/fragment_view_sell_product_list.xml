<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:background="@drawable/textbox_rectangle_background_shape"
                android:orientation="horizontal">

                <AutoCompleteTextView
                    android:id="@+id/actv_CustomerID"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center_horizontal"
                    android:hint="@string/ID"
                    android:inputType="number"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/user_id_icon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/textbox_rectangle_backgroundsolid_shape">

                <b2infosoft.milkapp.com.useful.CustomFontTextView

                    android:id="@+id/tvFathername"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/User_all_info"
                    android:singleLine="true"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutStartDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:background="@drawable/textbox_rectangle_background_shape"
                android:orientation="horizontal">

                <b2infosoft.milkapp.com.useful.CustomFontTextView
                        
                    android:id="@+id/tvStartDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/ID"
                    android:textSize="12sp"
                    android:singleLine="true"
                    android:text="@string/Start_Date"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />


                <ImageView
                    android:id="@+id/imgStartDate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/calendar_icon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEndDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.5"
                android:background="@drawable/textbox_rectangle_background_shape"
                android:orientation="horizontal">

                <b2infosoft.milkapp.com.useful.CustomFontTextView

                    android:id="@+id/tvEndDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/transparent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:text="@string/End_Date"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />


                <ImageView
                    android:id="@+id/imgEndDate"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/calendar_icon" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginLeft="3dp"
                android:layout_weight="0.4"
                android:background="@drawable/btn_shape_global">

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:text="@string/Submit"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <b2infosoft.milkapp.com.useful.CustomFontTextView

                android:id="@+id/tvProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_weight="4.5"
                android:text="@string/Product_Name"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                        
                android:id="@+id/tvQuantity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="@string/Quantity"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                        
                android:id="@+id/tvTotalPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="8sp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:text="@string/Total_Amount"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/recycler_SellingProductList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentBottom="true"
        android:minHeight="45dp"
        android:background="@color/colorSubheader"
        android:gravity="bottom"
        android:orientation="horizontal">


        <b2infosoft.milkapp.com.useful.CustomFontTextView

            android:id="@+id/tvTotalSellingPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="1.4"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""

            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

    </LinearLayout>
</RelativeLayout>