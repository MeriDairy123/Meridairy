<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/etUpdateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:hint="@string/Name"
            android:padding="5dp"
            android:letterSpacing="0.5"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:text=""
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_CollectionCenterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/etCollectionCenterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:hint="@string/Please_Enter_Collection_Center_Name"
            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:text=""
            android:letterSpacing="0.5"
            android:padding="5dp"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_Dairy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/etDairy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:hint="@string/Please_Enter_Dairy_Name"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:inputType="textCapWords"
            android:text=""
            android:letterSpacing="0.5"
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_FatherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/etFatherName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:padding="5dp"
            android:letterSpacing="0.5"
            android:hint="@string/Father_Name"

            android:imeOptions="actionNext"
            android:inputType="textCapWords"
            android:nextFocusDown="@id/spState"
            android:text=""
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <Spinner
        android:id="@+id/spState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp"
        android:imeOptions="actionNext"
        android:nextFocusDown="@id/spCity"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/color_light_white" />


    <Spinner
        android:id="@+id/spCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp"
        android:imeOptions="actionNext"
        android:entries="@array/select"
        android:nextFocusDown="@id/etStreetAddress"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_light_white" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_StreetAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginTop="15dp">

        <EditText
            android:id="@+id/etStreetAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:padding="5dp"
            android:letterSpacing="0.3"
            android:maxLines="3"
            android:hint="@string/Please_Enter_Street_Address"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_location"
            android:imeOptions="actionDone"
            android:text=""


            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>
    <b2infosoft.milkapp.com.useful.CustomFontTextView
        android:fontFamily="@string/Roboto_Regular"
        android:id="@+id/tvAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:hint="@string/Address"
        android:gravity="start|center_vertical"
        android:drawableRight="@drawable/ic_location"
        android:padding="5dp"
        android:drawablePadding="10dp"
        android:visibility="gone"
        android:background="@drawable/edit_text_bottom_line"

        android:layout_marginTop="15dp"/>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_AdharNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"

        android:visibility="gone">

        <EditText
            android:id="@+id/etAdharNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:hint="Adhar Number"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="12"
            android:letterSpacing="0.5"
            android:padding="5dp"
            android:text=""
            android:textSize="14sp" />
    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>