<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:src="@color/color_bg">

    <ImageView
        android:layout_width="50.0dp"
        android:layout_height="50.0dp"
        android:src="@android:drawable/ic_lock_lock" />

    <b2infosoft.milkapp.com.useful.CustomFontTextView
        android:id="@+id/promptview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20.0dp"
        android:textColor="@color/colorWhite"
        android:text="@string/Enter_your_passcode"
        android:textSize="18.0sp" />

    <in.arjsna.passcodeview.PassCodeView
        android:id="@+id/pass_code_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25.0dp"
        app:digit_size="30.0dp"
        app:digits="4"
        app:divider_visible="false"
        app:empty_drawable="@drawable/pin_empty_dot"
        app:filled_drawable="@drawable/ic_dot_red"
        app:key_text_size="30.0sp" />

    <b2infosoft.milkapp.com.useful.CustomFontButton

        android:id="@+id/btnChangePin"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/btn_shape_global"
        android:text="@string/SET_PIN"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />

    <b2infosoft.milkapp.com.useful.CustomFontButton

        android:id="@+id/changePin"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/btn_shape_global"
        android:text="@string/SET_PIN"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_15sdp" />
</LinearLayout>
