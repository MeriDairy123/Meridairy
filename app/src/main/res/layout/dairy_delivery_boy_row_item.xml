<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_darkGray"
    android:orientation="vertical"
    android:elevation="5dp"
    android:layout_marginBottom="2dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/navImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:minWidth="@dimen/_50sdp"
            android:minHeight="@dimen/_50sdp"
            android:padding="@dimen/_3sdp"

            app:srcCompat="@drawable/ic_user_profile_dairy" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:layout_toRightOf="@id/navImage"

            android:inputType="text"

            android:text="@string/Meri_Dairy"
            android:textColor="@color/colorWhite" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tvMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvName"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/navImage"

            android:inputType="text"
            android:text="1234567890"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />
        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMobile"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/navImage"
            android:layout_marginBottom="5dp"

            android:layout_marginRight="35dp"
            android:text="Jaipur "
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/imgMoreDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
            android:layout_below="@+id/checkBox"
            android:layout_marginTop="5dp"

           app:srcCompat="@drawable/ic_three_dot"
            />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:layout_below="@id/navImage"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:background="@color/color_light_white" />

    </RelativeLayout>


</LinearLayout>
