<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="80dp"

        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/add_entry"
                app:tint="@color/colorDashboardIcon" />
            <TextView
                android:id="@+id/tvCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="20dp"
                android:layout_marginLeft="-10dp"
                android:layout_marginTop="1dp"
                android:padding="3dp"
                android:layout_toRightOf="@+id/image1"
                android:background="@drawable/btn_shape_global"
                android:backgroundTint="@color/colorRed"
                android:gravity="center"
                android:text="0"
                android:visibility="gone"
                android:drawableTint="@color/colorRed"

                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:textStyle="bold"
                android:tint="@color/colorDashboardIcon" />

            <b2infosoft.milkapp.com.useful.CustomFontTextView
                android:id="@+id/tvItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image1"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"

                android:gravity="center"

                android:padding="2dp"
                android:text="@string/app_name"
                android:textSize="13sp"
                android:textColor="@color/colorDashboardText"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>