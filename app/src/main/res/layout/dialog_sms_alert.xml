<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="center"
        android:text="@string/dialog_sms_title"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/_21sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@color/color_bottom_light_gray" />

    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="start"
        android:text="@string/dialog_sms_text"
        android:textColor="@color/color_bg_light"
        android:textSize="@dimen/_16sdp" />

    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/tv_dialog_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="@string/dialog_sms_note"
        android:textColor="@color/colorRed" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp">

        <b2infosoft.milkapp.com.useful.CustomFontButton
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_green"
            android:minWidth="@dimen/_75sdp"
            android:minHeight="@dimen/_35sdp"

            android:padding="5dp"
            android:text="@string/yes"
            android:textColor="@color/colorWhite" />

        <b2infosoft.milkapp.com.useful.CustomFontButton
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_toRightOf="@+id/btnYes"
            android:background="@drawable/btn_shape_red"
            android:minWidth="@dimen/_75sdp"
            android:minHeight="@dimen/_35sdp"
            android:padding="5dp"
            android:text="@string/no"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


</LinearLayout>
