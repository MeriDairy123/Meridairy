<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">

        <b2infosoft.milkapp.com.useful.CustomFontButton
            android:id="@+id/btnPrintMorning"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/et_password"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape_global"
            android:text="@string/PRINT_MORNING_PDF"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal" />

        <b2infosoft.milkapp.com.useful.CustomFontButton
            android:id="@+id/btnPrintEvening"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_shape_green"
            android:text="@string/PRINT_EVENING_PDF"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>
