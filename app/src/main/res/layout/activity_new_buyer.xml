<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/color_bg"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutSpinChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:minHeight="@dimen/_35sdp"
                android:orientation="vertical">

                <b2infosoft.milkapp.com.useful.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/selectChartCategory"
                    android:textColor="@color/colorLightGray"
                    android:textColorHint="@color/colorLightGray"
                    android:textSize="@dimen/_11sdp" />

                <Spinner
                    android:id="@+id/spinChartCat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:entries="@array/select"
                    android:minHeight="@dimen/_30sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.02dp"
                    android:background="@color/colorWhite" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_userNamePhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="@string/Phone_Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"


                android:background="@color/color_bottom_light_gray" />

            <Button
                android:id="@+id/btnCheckUser"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_shape_global"
                android:text="Check User"
                android:textAlignment="center"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="@string/Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"


                android:background="@color/color_bottom_light_gray" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediFatherName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:hint="@string/Father_Name"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"


                android:background="@color/color_bottom_light_gray" />

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"

                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediAccountNo"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/accountNo"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="18"
                    android:minHeight="@dimen/_30sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediIFSC"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/IFSC_Code"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="11"
                    android:minHeight="@dimen/_30sdp"
                    android:singleLine="true"

                    android:text=""
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediBankName"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bankName"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minHeight="@dimen/_30sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediVillage"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/village"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:minHeight="@dimen/_30sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Address"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:minHeight="@dimen/_30sdp"
                    android:singleLine="true"

                    android:text=""
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_30sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediMorningMilk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:hint="@string/Morning_Milk"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediEveningMilk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:hint="@string/Evening_Milk"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/_30sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:textColorHint="@color/colorLightGray">

                <EditText
                    android:id="@+id/ediPricePerLtr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_30sdp"
                    android:hint="@string/Rate"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textSize="@dimen/_11sdp" />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:id="@+id/layoutOpenBal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:minHeight="@dimen/_35sdp"
                android:orientation="vertical">

                <b2infosoft.milkapp.com.useful.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/OpeningAmount"
                    android:textColor="@color/colorLightGray"
                    android:textColorHint="@color/colorLightGray"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <Spinner
                        android:id="@+id/spinOpeningBal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:entries="@array/select"
                        android:minHeight="@dimen/_30sdp" />

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="0.4"
                        android:background="@drawable/edit_text_bottom_line"
                        android:minHeight="@dimen/_30sdp"
                        android:textColorHint="@color/colorLightGray">

                        <EditText
                            android:id="@+id/ediOpeningAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/Amount"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="9"

                            android:singleLine="true"
                            android:text=""
                            android:textSize="@dimen/_11sdp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="0.02dp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <b2infosoft.milkapp.com.useful.CustomFontTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/Roboto_Regular"
                    android:text="@string/ChooseMilkPlan"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"


                    android:nestedScrollingEnabled="true"
                    android:layout_marginTop="@dimen/_5sdp" />



            </LinearLayout>
            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"

                android:layout_marginTop="@dimen/_30sdp"

                android:background="@drawable/btn_shape_global"
                android:text="@string/Submit"
                android:textAlignment="center"
                android:layout_marginBottom="@dimen/_50sdp"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>