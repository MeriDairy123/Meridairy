<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_light_white"
    android:orientation="vertical">
    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/color_light_white"
        android:textStyle="bold"
        android:text="@string/text_upload_images"
        android:textAllCaps="true"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:padding="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnupload_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/camer_icon" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/image_upload_recycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:padding="10dp" />

    </LinearLayout>


    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/color_light_white"
        android:textStyle="bold"
        android:text="@string/upload_videos"
        android:textAllCaps="true"
        android:gravity="center_vertical"

        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:padding="2dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnupload_video"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/video_camera" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <VideoView
                android:id="@+id/first_video_cow"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@android:color/transparent"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/video_play_button"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_play_video" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>