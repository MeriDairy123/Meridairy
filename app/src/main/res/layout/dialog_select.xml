<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_border"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <b2infosoft.milkapp.com.useful.CustomFontTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvDialogTitle"
            android:padding="5dp"
            android:text="@string/select"

            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/imgClosed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"

            android:layout_gravity="end"

            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            app:srcCompat="@drawable/ic_failure" />
    </RelativeLayout>





    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/tvBuyproduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlack"
        android:drawableTint="@color/colorBlack"
        android:drawableRight="@drawable/ic_arrow_right"

        android:text="@string/BuyMilkProduct"

        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/color_list_gray"/>
    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/tvViewEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:drawableTint="@color/colorBlack"
        android:drawableRight="@drawable/ic_arrow_right"


        android:text="@string/ViewEventDetais"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

</LinearLayout>
