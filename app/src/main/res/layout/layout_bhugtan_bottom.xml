<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="45dp"
    android:layout_alignParentBottom="true"
    android:gravity="bottom"
    android:orientation="horizontal">

    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/tvPrintPdfAndSend"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:textSize="13sp"
        android:layout_weight="1.5"
        android:background="@drawable/btn_shape_global"
        android:gravity="center_vertical"
        android:text="@string/Print_And_Send_Message"
        android:textAlignment="center"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape_green"
        android:orientation="horizontal">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
           
            android:id="@+id/tvPrint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/transparent"
            android:gravity="center_vertical"
            android:text="@string/Print"
            android:textSize="13sp"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/ProgressBar01"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="4dp"
            android:visibility="gone" />
    </LinearLayout>


    <b2infosoft.milkapp.com.useful.CustomFontTextView

        android:id="@+id/tvSendMessage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/btn_shape_orange"
        android:gravity="center_vertical"
        android:text="@string/Send_Message"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="13sp" />

</LinearLayout>
