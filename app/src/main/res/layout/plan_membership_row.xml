<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_blue"
        android:id="@+id/layoutPlan"
        android:orientation="vertical">

    <b2infosoft.milkapp.com.useful.CustomFontTextView
        android:id="@+id/tvPlanHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/colorBlueDark"
        android:elevation="5dp"
       android:textStyle="bold"
        android:gravity="center"
        android:minHeight="35dp"
        android:text="@string/Months"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/viewPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tv_Rslable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tvPlanPrice"

            android:gravity="center"
            android:text="@string/Rs"
            android:textColor="@color/colorWhite"
            android:textSize="13sp" />

        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/tvPlanPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_Rslable"
             android:layout_centerHorizontal="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-20dp"

            android:gravity="center"
            android:text="299/-"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="bold" />
        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvValidity"
            android:layout_below="@+id/tvPlanPrice"
            android:layout_centerInParent="true"
            android:layout_marginLeft="-5dp"

            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Validity: Unlimited"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            android:textStyle="bold" />
        <b2infosoft.milkapp.com.useful.CustomFontTextView
            android:id="@+id/btnPurchase"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tvValidity"
            android:layout_marginTop="15dp"

            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:minWidth="100dp"
            android:background="@drawable/btn_shape_global"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="@string/Purchase"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>